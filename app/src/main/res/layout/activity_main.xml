<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/number_of_history_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/history_not_loaded"/>

        <TextView
            android:id="@+id/current_work_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="@string/current_work_type"/>
        <TextView
            android:id="@+id/current_work_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="@string/history_not_loaded"/>

        <TextView
            android:id="@+id/time_worked_today_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="@string/time_worked_today"/>
        <TextView
            android:id="@+id/time_worked_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="@string/no_value"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_change_work_type_1"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/button_change_work_type_2"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/button_change_work_type_3"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_change_work_type_4"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/button_change_work_type_5"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/button_change_work_type_6"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_change_work_type_7"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/button_change_work_type_8"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/button_change_work_type_9"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/button_off_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/off_work" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
