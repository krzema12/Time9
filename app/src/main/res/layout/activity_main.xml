<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/number_of_history_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/history_not_loaded"/>

        <TextView
            android:id="@+id/current_work_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="@string/current_work_type"/>
        <TextView
            android:id="@+id/current_work_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="@string/history_not_loaded"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_sprint_work"
                    android:tag="work_item_type:Sprint Work"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Sprint Work" />
                <Button
                    android:id="@+id/button_code_review"
                    android:tag="work_item_type:Code Review"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Code Review" />
                <Button
                    android:id="@+id/button_meeting"
                    android:tag="work_item_type:Meeting"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Meeting" />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_adhoc_request"
                    android:tag="work_item_type:Ad-hoc Request"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Ad-hoc Request" />
                <Button
                    android:id="@+id/button_operational"
                    android:tag="work_item_type:Operational"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Operational" />
                <Button
                    android:id="@+id/button_design_project_management"
                    android:tag="work_item_type:Design/project management"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Design/project management" />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_scrum_mastering"
                    android:tag="work_item_type:Scrum-mastering"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Scrum-mastering" />
                <Button
                    android:id="@+id/button_recruiting"
                    android:tag="work_item_type:Recruiting"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Recruiting" />
                <Button
                    android:id="@+id/button_other"
                    android:tag="work_item_type:Other"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Other" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/button_off_work"
            android:tag="work_item_type:Off Work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/off_work" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
